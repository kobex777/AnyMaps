{
    "functions": {
        "api/**/*.py": {
            "maxDuration": 60
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index"
        },
        {
            "source": "/((?!api/.*|.*\\..*).*)",
            "destination": "/index.html"
        }
    ]
}